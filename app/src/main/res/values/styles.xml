<resources>

    <style name="AppStyle" parent="AppTheme" />

    <!-- Button styles -->
    <style name="AppStyle.Button" />
    <style name="AppStyle.Button.Raised" parent="Widget.AppCompat.Button.Colored" />
    <style name="AppStyle.Button.Flat" parent="Widget.AppCompat.Button.Borderless.Colored"/>

    <!-- CardView styles -->
    <style name="AppStyle.CardView" parent="CardView.Light">
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="AppStyle.CardView.SidePadding">
        <item name="contentPaddingLeft">@dimen/card_padding_lateral</item>
        <item name="contentPaddingRight">@dimen/card_padding_lateral</item>
    </style>
    <style name="AppStyle.CardView.Text" parent="TextAppearance.AppCompat" />
    <style name="AppStyle.CardView.Text.Title">
        <item name="android:textSize">@dimen/card_text_primary_title</item>
    </style>
    <style name="AppStyle.CardView.Text.Title.Medium">
        <item name="android:textSize">@dimen/card_text_primary_title_medium</item>
    </style>
    <style name="AppStyle.CardView.Text.Title.Small">
        <item name="android:textSize">@dimen/card_text_primary_title_small</item>
    </style>
    <style name="AppStyle.CardView.Text.Subtitle">
        <item name="android:textSize">@dimen/card_text_primary_subtitle</item>
        <item name="android:textColor">@color/text_black_secondary</item>
    </style>
    <style name="AppStyle.CardView.Text.Supporting">
        <item name="android:textSize">@dimen/card_text_supporting</item>
    </style>
    <style name="AppStyle.CardView.Text.Supporting.Large">
        <item name="android:textSize">@dimen/card_text_supporting_large</item>
    </style>

    <!-- LinearLayout styles -->
    <!-- LINEARLAYOUT -->
    <style name="AppStyle.LinearLayout" />
    <style name="AppStyle.LinearLayout.Footer" parent="Widget.AppCompat.ButtonBar">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Toolbar styles -->
    <style name="AppStyle.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>